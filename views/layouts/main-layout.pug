<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet", href="css/main.css")
        block css
        
    body
        header
            nav.navbar
                ul.right-left-align
                    ul.nav-ul
                        li
                            a(href='/' class=(path==='/'?'active':'')) Shop
                        if(isLoggedIn)
                            li
                                a(href='/admin/add-product' class=(path==='admin/add-product'?'active':'')) Admin
                        if(isLoggedIn)
                            li
                                a(href='/cart' class=(path==='cart'?'active':'')) Cart
                        if(isLoggedIn)
                            li
                                a(href='/checkout' class=(path==='checkout'?'active':'')) Checkout
                        if(isLoggedIn)
                            li
                                a(href=('/admin/products') class=(path==='admin/products'?'active':'')) Admin-Products
                    ul.nav-ul.login
                        if(!isLoggedIn)
                            li
                                a(href=('/login')) Login
                                a(href=('/signup')) Signup
                        else
                            form(action="/logout", method="post")
                                button(type="submit") Logout     
                                input(type="hidden", name="_csrf" value=csrfToken)   
        block content